<%- include('../partials/header') %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-6xl mx-auto">
    <div class="flex flex-col md:flex-row gap-6">
      <!-- Sidebar -->
      <div class="w-full md:w-64">
        <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden">
          <div class="p-4 bg-red-700">
            <h2 class="text-xl font-bold text-white">Admin Panel</h2>
          </div>
          <nav class="p-4">
            <ul class="space-y-2">
              <li>
                <a href="/admin" class="flex items-center px-4 py-2 text-white bg-red-600 rounded-md">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M2 10a8 8 0 018-8v8h8a8 8 0 11-16 0z" />
                    <path d="M12 2.252A8.014 8.014 0 0117.748 8H12V2.252z" />
                  </svg>
                  Dashboard
                </a>
              </li>
              <li>
                <a href="/admin/users" class="flex items-center px-4 py-2 text-gray-300 hover:bg-gray-700 rounded-md transition">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" viewBox="0 0 20 20" fill="currentColor">
                    <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                  </svg>
                  Kullanıcı Yönetimi
                </a>
              </li>
              <li>
                <a href="/" class="flex items-center px-4 py-2 text-gray-300 hover:bg-gray-700 rounded-md transition">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm.707-10.293a1 1 0 00-1.414-1.414l-3 3a1 1 0 000 1.414l3 3a1 1 0 001.414-1.414L9.414 11H13a1 1 0 100-2H9.414l1.293-1.293z" clip-rule="evenodd" />
                  </svg>
                  Siteye Dön
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
      
      <!-- Main Content -->
      <div class="flex-1">
        <div class="bg-gray-800 rounded-lg shadow-lg overflow-hidden mb-6">
          <div class="p-6">
            <h2 class="text-2xl font-bold text-red-500 mb-6">Admin Dashboard</h2>
            
            <!-- Stats Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-4 gap-6 mb-6">
              <!-- Total Users -->
              <div class="bg-gray-700 rounded-lg p-6">
                <div class="flex items-center">
                  <div class="p-3 rounded-full bg-blue-600 bg-opacity-25">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-500" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v1h8v-1zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-1a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v1h-3zM4.75 12.094A5.973 5.973 0 004 15v1H1v-1a3 3 0 013.75-2.906z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-gray-400 text-sm">Toplam Kullanıcı</h3>
                    <p class="text-2xl font-bold text-white"><%= userCount %></p>
                  </div>
                </div>
              </div>
              
              <!-- Site Kurucusu -->
              <div class="bg-gray-700 rounded-lg p-6">
                <div class="flex items-center">
                  <div class="p-3 rounded-full bg-purple-600 bg-opacity-25">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-purple-500" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v1h8v-1zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-1a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v1h-3zM4.75 12.094A5.973 5.973 0 004 15v1H1v-1a3 3 0 013.75-2.906z" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-gray-400 text-sm">Site Kurucusu</h3>
                    <p class="text-2xl font-bold text-white"><%= siteKurucusuCount %></p>
                  </div>
                </div>
              </div>
              
              <!-- Sunucu Sahibi -->
              <div class="bg-gray-700 rounded-lg p-6">
                <div class="flex items-center">
                  <div class="p-3 rounded-full bg-red-600 bg-opacity-25">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-red-500" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-gray-400 text-sm">Sunucu Sahibi</h3>
                    <p class="text-2xl font-bold text-white"><%= sunucuSahibiCount %></p>
                  </div>
                </div>
              </div>
              
              <!-- Site Admini -->
              <div class="bg-gray-700 rounded-lg p-6">
                <div class="flex items-center">
                  <div class="p-3 rounded-full bg-green-600 bg-opacity-25">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-green-500" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M10 12a2 2 0 100-4 2 2 0 000 4z" />
                      <path fill-rule="evenodd" d="M.458 10C1.732 5.943 5.522 3 10 3s8.268 2.943 9.542 7c-1.274 4.057-5.064 7-9.542 7S1.732 14.057.458 10zM14 10a4 4 0 11-8 0 4 4 0 018 0z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-gray-400 text-sm">Site Admini</h3>
                    <p class="text-2xl font-bold text-white"><%= siteAdminiCount %></p>
                  </div>
                </div>
              </div>
              
              <!-- Sunucu Admini -->
              <div class="bg-gray-700 rounded-lg p-6">
                <div class="flex items-center">
                  <div class="p-3 rounded-full bg-blue-600 bg-opacity-25">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-blue-500" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
                    </svg>
                  </div>
                  <div class="ml-4">
                    <h3 class="text-gray-400 text-sm">Sunucu Admini</h3>
                    <p class="text-2xl font-bold text-white"><%= sunucuAdminiCount %></p>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Quick Actions -->
            <h3 class="text-xl font-bold text-white mb-4">Hızlı İşlemler</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
              <a href="/admin/users" class="bg-gray-700 hover:bg-gray-600 rounded-lg p-4 flex items-center transition">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-red-500 mr-3" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
                </svg>
                <div>
                  <h4 class="text-white font-bold">Kullanıcı Yönetimi</h4>
                  <p class="text-gray-400 text-sm">Kullanıcıları yönet, rol değiştir</p>
                </div>
              </a>
              <a href="/" class="bg-gray-700 hover:bg-gray-600 rounded-lg p-4 flex items-center transition">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-red-500 mr-3" viewBox="0 0 20 20" fill="currentColor">
                  <path d="M11 17a1 1 0 001.447.894l4-2A1 1 0 0017 15V9.236a1 1 0 00-1.447-.894l-4 2a1 1 0 00-.553.894V17zM15.211 6.276a1 1 0 000-1.788l-4.764-2.382a1 1 0 00-.894 0L4.789 4.488a1 1 0 000 1.788l4.764 2.382a1 1 0 00.894 0l4.764-2.382zM4.447 8.342A1 1 0 003 9.236V15a1 1 0 00.553.894l4 2A1 1 0 009 17v-5.764a1 1 0 00-.553-.894l-4-2z" />
                </svg>
                <div>
                  <h4 class="text-white font-bold">Siteye Dön</h4>
                  <p class="text-gray-400 text-sm">Normal web sitesine dön</p>
                </div>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %> 